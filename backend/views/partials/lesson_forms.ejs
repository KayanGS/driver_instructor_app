<!-- CREATE LESSON -->
<form id="createLesson">
    <h2>Create Lesson</h2>
    <label>Date:
        <input type="date" name="lesson_date" required />
    </label>
    <label>Time:
        <select name="lesson_time" required>
            <option value="">-- Select Time --</option>
            <option value="08:00">08:00</option>
            <option value="09:00">09:00</option>
            <option value="10:00">10:00</option>
            <option value="13:00">13:00</option>
            <option value="14:00">14:00</option>
            <option value="15:00">15:00</option>
            <option value="16:00">16:00</option>
            <option value="17:00">17:00</option>
            <option value="18:00">18:00</option>
        </select>
    </label>
    <button type="submit">Book Lesson</button>
</form>

<!-- GET LESSONS AND DISPLAY -->
<form id="getAllLessons">
    <h2>Get My Lessons</h2>
    <button type="submit">Fetch</button>
</form>

<!-- Lessons appear here -->
<div id="lessonList" class="lesson-list"
    style="margin-top: 2rem; display: flex; flex-direction: column; gap: 1.25rem; max-width: 600px; margin-inline: auto;">
</div>